@section CustomScripts {
    @Scripts.Render("~/Scripts/Financial/getFinancialData.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/raphael.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/morris.min.js")
}

@section CustomStyles{
    @Styles.Render("~/Content/plugins/morris.css")
}

<!-- Page Title -->
<div class="row page-title" style="text-align: center;">
    <h2>
        <a id="previousYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-left fa-1x"></i>
        </a> |
        <span id="yearTitle"> @ViewData["Year"] </span>|
        <a id="nextYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-right fa-1x"></i>
        </a>
    </h2>
</div>

<div class="row" style="padding-bottom: 300px;">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 col-md-12">
        <div class="row margin-client-details ">
<!-- Total Turnover -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-purple">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa-plus fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingTotalTurnover"></span><span class="totalTurnover"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#9370DB"> Total Turnover </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Total Expenses -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingTotalExpenses"></span><span class="totalExpenses"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#d9534f"> Total Expenses </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Average Sales Price -->
            <div class="col-lg-4 col-md-12">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAverageSalesPrice"></span><span class="averageSalesPrice"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#f0ad4e"> Average Sales Price </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
<!-- Row 2 -->
        <div class="row margin-client-details ">
<!-- Accounts Payable -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAccountsPayable"></span><span class="accountsPayable"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#d9534f"> Accounts Payable</span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Accounts Receivable -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAccountsReceivable"></span><span class="accountsReceivable"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:green"> Accounts Receivable </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Cash Flow -->
            <div class="col-lg-4 col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingCashFlow"></span><span class="cashFlow"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:blue"> Cash Flow</span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
<!-- Row 3 -->
        <div class="row margin-client-details ">
<!-- Total Assets -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingTotalAssets"></span><span class="totalAssets"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:green"> Total Assets</span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Total Liabilities -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingTotalLiabilities"></span><span class="totalLiabilities"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#d9534f"> Total Liabilities </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
<!-- Sales Revenue Growth -->
            <div class="col-lg-4 col-md-6">
                <div class="panel panel-purple">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-arrow-up" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingSalesRevenueGrowth"></span><span class="salesRevenueGrowth"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-right" style="color:#9370DB"> Sales Revenue Growth </span>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>