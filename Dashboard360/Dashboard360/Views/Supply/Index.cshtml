@section CustomScripts {
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/raphael.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/morris.min.js")
    @Scripts.Render("~/Scripts/Supply/getTotalPurchasedValue.js")
    @Scripts.Render("~/Scripts/Supply/getAveragePurchasedValue.js")
    @Scripts.Render("~/Scripts/Supply/getTopProductsPurchased.js")
    @Scripts.Render("~/Scripts/Supply/getTotalValueOfInventory.js")
    @Scripts.Render("~/Scripts/Supply/getTopSuppliers.js")
    @Scripts.Render("~/Scripts/Supply/SupplyManager.js")

}


@section CustomStyles{
    @Styles.Render("~/Content/plugins/morris.css")
}


<!-- Page Title -->
<div class="row page-title" style="text-align: center;">
    <h2>
        <a id="previousYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-left fa-1x"></i>
        </a> |
        <span id="yearTitle"> @ViewData["Year"] </span>|
        <a id="nextYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-right fa-1x"></i>
        </a>
    </h2>
</div>

<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-1">
                <!-- Total Sales This Year-->
                <div class="col-lg-12 col-md-12">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-minus-square-o fa-3x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div class="huge"><span class="loadingSalesTotal"></span><span class="salesTotalThisYear"></span></div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-right">Total Purchased Costs This Year [€]</span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Average expenses per customer -->
                <div class="col-lg-12 col-md-12 margin-clients">
                    <div class="panel panel-purple">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-minus-square-o fa-3x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div class="huge"><span class="loadingAvgExpense"></span><span class="avgExpenseCustomer"></span></div>

                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-right">Average Purchased Value [€]</span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Avg Sale Per Customer -->
                <div class="col-lg-12 col-md-12 margin-clients">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-euro fa-3x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div class="huge"><span class="loadingAvgSalePerCustomer"></span><span class="totalValueOfInventory"></span></div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-right">Total Value of Inventory [€]</span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Top 10 Suppliers Pie Chart-->
            <div class="col-lg-5 col-md-6">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row" style="text-align: center;">
                            <div class="col-xs-12">
                                <div style="font-size: 25px;">Top Suppliers</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" style="text-align: center;">
                        <span class="loadingTopClients"></span>
                        <div id="top-suppliers"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-12">
                <div class="panel panel-orange">
                    <div class="panel-heading">
                        <div class="row" style="text-align: center;">
                            <div class="col-xs-12">
                                <span style="font-size: 25px;">Top 10 Products Purchased</span>
                                <span class="pull-right">
                                    <a data-toggle="modal" data-target="#topProductsList">
                                        <i class="fa fa-plus-circle fa-2x"></i>
                                    </a>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer" style="text-align: center;">
                        <span class="loadingTopProducts"></span>
                        <div id="top-products-purchased"></div>
                    </div>
                </div>
            </div>


        </div>
    </div>


    <!-- Top Products Modal -->
    <div class="modal fade" id="topProductsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content panel-green">
                <div class="modal-header modal-header-orange">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Top Products Purchased</h4>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-hover top-products-modal-body" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th> Code </th>
                                    <th> Description</th>
                                    <th> Sales </th>
                                    <th> Total </th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
                <div class="modal-footer" style="text-align: center;">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>



