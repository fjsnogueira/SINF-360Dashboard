@section CustomStyles{
    @Styles.Render("~/Content/plugins/morris.css")
}

@section CustomScripts {
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/Purchases/getPurchases.js")
    @Scripts.Render("~/Scripts/Clients/getTop10Clients.js")
    @Scripts.Render("~/Scripts/Products/getTop10Products.js")
    @Scripts.Render("~/Scripts/plugins/morris/morris.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/raphael.min.js")
}

<!-- Page Title -->
<div class="row page-title" style="text-align: center;">
    <h1> Enterprise View </h1>
    <hr />
    <h2> | 2016 | </h2>
</div>

<!-- Page Contents -->
<section class="content-wrapper main-content clear-fix container">
    <div class="row">
        <!-- Turnover -->
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-euro fa-3x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <div class="huge"><span class="salesTotalThisYear"></span></div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-right">Total Turnover In the Present Year</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <!-- Total Expenses -->
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-minus-square-o fa-3x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <div class="huge"><span class="avgExpenseCustomer"></span></div>

                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-right"> Total expenses in current year </span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <!-- HR Expenses -->
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-minus-square-o fa-3x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <div class="huge"><span class="avgExpenseCustomer"></span></div>

                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-right">Human Resources Spendings</span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Top Products -->
        <div class="col-lg-8 col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row" style="text-align: center;">
                        <div class="col-xs-12">
                            <div style="font-size: 25px;">Top 10 Products Sold</div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div id="bar-example"></div>
                </div>
            </div>
        </div>
        <!-- Top Customers-->
        <div class="col-lg-4 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row" style="text-align: center;">
                        <div class="col-xs-12">
                            <div style="font-size: 25px;">Top Customers</div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div id="top-clients"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-4 col-md-6">
            <div class="row">
                <!-- Average Expense Per Customer-->
                <div class="col-lg-12 col-md-6">
                    <div class="panel panel-red">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-minus-square-o fa-3x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div class="huge"><span class="avgExpenseCustomer"></span></div>

                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-right">Average Expense Per Customer</span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- Turnover -->
                <div class="col-lg-12 col-md-6">
                    <div class="panel panel-green">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-2">
                                    <i class="fa fa-euro fa-3x"></i>
                                </div>
                                <div class="col-xs-10 text-right">
                                    <div class="huge"><span class="salesTotalThisYear"></span></div>
                                </div>
                            </div>
                        </div>
                        <a href="#">
                            <div class="panel-footer">
                                <span class="pull-right">Average Sale Price </span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8 col-md-12">
            <!-- Sales Revenue Growth-->
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row" style="text-align: center;">
                                <div class="col-xs-12">
                                    <div style="font-size: 25px;">Sales Revenue Growth </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div id="bar-example"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row" style="text-align: center;">
                        <div class="col-xs-12">
                            <div style="font-size: 25px;">Orders / Inventory Ratio [Top Products]</div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div id="bar-example"></div>
                </div>
            </div>
        </div>
    </div>

</section>