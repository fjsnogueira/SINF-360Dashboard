@section CustomScripts {
    @Scripts.Render("~/Scripts/Sales/Sales.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/Clients/getTop10Clients.js")
    @Scripts.Render("~/Scripts/Products/getTop10Products.js")
    @Scripts.Render("~/Scripts/plugins/morris/morris.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/raphael.min.js")
}

@section CustomStyles{
    @Styles.Render("~/Content/plugins/morris.css")
}

<!-- Page Title -->
<div class="row page-title" style="text-align: center;">
    <h2> <a href="/Clients/PreviousYear"> <i class="fa fa-arrow-left fa-1x"></i> </a> 2016 </h2>
</div>

<div class="row">
    <!-- Total Clients-->
    <div class="col-lg-1"></div>
    <div class="col-lg-6 col-md-12">
        <div class="row">
            <!-- Total Sales This Year-->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="salesTotalThisYear"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Total Sales This Year</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Average expenses per customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-minus-square-o fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="avgExpenseCustomer"></span></div>

                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Average Expense Per Customer</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row margin">
            <!-- Total Clients -->
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-users fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="numberOfCustomers"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#totalClientsList">
                        <div class="panel-footer">
                            <span class="pull-right">All registered clients <i class="fa fa-plus-circle"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Active Clients-->
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-user fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="activeClients"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#activeClientsList">
                        <div class="panel-footer">
                            <span class="pull-left">Customers with purchases in current year</span>
                            <span class="pull-right"><i class="fa fa-plus-circle"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row margin">
            <!-- Avg Sale Per Customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-shopping-cart fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class=" avgSalePerCustomer"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Average Sale Per Customer [€]</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Avg Sale Per Active Customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-shopping-cart fa-3x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge"><span class=" avgSalePerActiveCustomer"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Average Sale Per Active Customer [€]</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Top 10 Customers Pie Chart-->
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row" style="text-align: center;">
                    <div class="col-xs-12">
                        <div style="font-size: 25px;">Top Customers</div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div id="top-clients"></div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-1"></div>
    <!-- Top Products Sold [Table] -->
    <div class="col-lg-10 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row" style="text-align: center;">
                    <div class="col-xs-12">
                        <a data-toggle="modal" data-target="#topProductsList"> View </a>
                        <div style="font-size: 25px;">Top 10 Products Sold</div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div id="bar-example"></div>
            </div>
        </div>
    </div>
</div>




<!-- Total Clients Modal -->
<div class="modal fade" id="totalClientsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header panel-green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Registered Customers</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover total-clients-modal-body" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Code </th>
                                <th> Name </th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Active Clients Modal -->
<div class="modal fade" id="activeClientsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header panel-green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Active Customers</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover active-clients-modal-body" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Client </th>
                                <th> Purchases </th>
                                <th> Value </th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Top Products Modal -->
<div class="modal fade" id="topProductsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header panel-green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Top Products Sold</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover top-products-modal-body" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> Code </th>
                                <th> Description</th>
                                <th> Sales </th>
                                <th> Total </th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>