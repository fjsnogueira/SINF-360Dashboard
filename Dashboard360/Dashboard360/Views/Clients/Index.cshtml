@section CustomScripts {   
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/raphael.min.js")
    @Scripts.Render("~/Scripts/plugins/morris/morris.min.js")  
    @Scripts.Render("~/Scripts/Chart.min.js")
    @Scripts.Render("~/Scripts/Clients/clientManager.js")
}

@section CustomStyles{
    @Styles.Render("~/Content/plugins/morris.css")
}

<!-- Page Title -->
<div class="row page-title" style="text-align: center;">
    <h2>
        <a id="previousYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-left fa-1x"></i>
        </a> |
        <span id="yearTitle"> @ViewData["Year"] </span>|
        <a id="nextYear" href="#" style="text-decoration: none!important; color: #428bca!important;">
            <i class="fa fa-arrow-right fa-1x"></i>
        </a>
    </h2>
</div>

<div class="row">
    <!-- Total Clients-->
    <div class="col-lg-1"></div>
    <div class="col-lg-6 col-md-12">
        <div class="row">
            <!-- Total Sales This Year-->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingSalesTotal"></span><span class="salesTotalThisYear"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#salesList">
                        <div class="panel-footer">
                            <span class="pull-right">Total in Sales <i class="fa fa-plus-circle"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Average expenses per customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAvgExpense"></span><span class="avgExpenseCustomer"></span></div>

                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#expenseslist">
                        <div class="panel-footer">
                            <span class="pull-right">Average Expense Per Customer <i class="fa fa-plus-circle"></i> </span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row margin-clients">
            <!-- Total Clients -->
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-users fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingNumCustomers"></span><span class="numberOfCustomers"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#totalClientsList">
                        <div class="panel-footer">
                            <span class="pull-right">Total Customers <i class="fa fa-plus-circle"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Active Clients-->
            <div class="col-lg-6 col-md-12">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-user fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingActiveCustomers"></span><span class="activeClients"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#" data-toggle="modal" data-target="#activeClientsList">
                        <div class="panel-footer">
                            <span class="pull-left">Customers With Sales In Current Year</span>
                            <span class="pull-right"><i class="fa fa-plus-circle"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row margin-clients">
            <!-- Avg Sale Per Customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAvgSalePerCustomer"></span><span class="avgSalePerCustomer"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Average Sale Per Customer</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Avg Sale Per Active Customer -->
            <div class="col-lg-6 col-md-6">
                <div class="panel panel-purple">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-2">
                                <i class="fa fa-euro fa-3x" aria-hidden="true"></i>
                            </div>
                            <div class="col-xs-10 text-right">
                                <div class="huge"><span class="loadingAvgSalePerActiveCustomer"></span><span class="avgSalePerActiveCustomer"></span></div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-right">Average Sale Per Active Customer</span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Top 10 Customers Pie Chart-->
    <div class="col-lg-4 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row" style="text-align: center;">
                    <div class="col-xs-12">
                        <div style="font-size: 25px;">Top Customers</div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="loadingTopClients"></span>
                <div id="top-clients"></div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-1"></div>
    <!-- Top Products Sold [Table] -->
    <div class="col-lg-10 col-md-6">
        <div class="panel panel-orange">
            <div class="panel-heading">
                <div class="row" style="text-align: center;">
                    <div class="col-xs-12">
                        <span style="font-size: 25px;">Best Selling Products </span>
                        <span class="pull-right">
                            <a data-toggle="modal" data-target="#topProductsList">
                                <i class="fa fa-plus-circle fa-2x" style="color: white!important;"></i>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <span class="loadingTopProducts" style="padding-left: 380px"></span>
                <div id="top-products"></div>
            </div>
        </div>
    </div>
</div>




<!-- Total Clients Modal -->
<div class="modal fade" id="totalClientsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header yellow">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Registered Customers</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Code </th>
                                <th> Name </th>
                            </tr>
                        </thead>
                        <tbody class="total-clients-modal-body"></tbody>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Active Clients Modal -->
<div class="modal fade" id="activeClientsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Active Customers</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Client </th>
                                <th> Purchases </th>
                                <th> Value </th>
                            </tr>
                        </thead>
                        <tbody class="active-clients-modal-body"></tbody>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<!-- Top Products Modal -->
<div class="modal fade" id="topProductsList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header orange">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Best Sellers</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> Code </th>
                                <th> Description </th>
                                <th> Sales </th>
                                <th> Total </th>
                            </tr>
                        </thead>
                        <tbody class="top-products-modal-body"></tbody>

                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Sales List Modal -->
<div class="modal fade" id="salesList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header green">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Sales List</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> Customer </th>
                                <th> Date </th>
                                <th> Total </th>
                            </tr>
                        </thead>
                        <tbody class="sales-modal-body"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Expense List Modal -->
<div class="modal fade" id="expenseslist" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header red">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">List of Expenses</h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th> Supplier </th>
                                <th> Date </th>
                                <th> Total </th>
                            </tr>
                        </thead>
                        <tbody class="expenses-modal-body"></tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align: center;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
